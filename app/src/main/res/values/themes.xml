<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UsefulMemo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/gray_1</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowBackground">@color/gray_1</item>
        <item name="android:colorBackground">@color/gray_1</item>

        <item name="android:navigationBarColor">@color/gray_1</item>

        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <item name="basicTextColor">@color/black</item>
        <item name="listBackground">@color/white</item>
        <item name="lineColor">@color/gray_2</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_img</item>
        <item name="android:statusBarColor">@color/gray_1</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="splashBackground">@color/gray_1</item>
    </style>
</resources>