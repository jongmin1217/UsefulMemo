<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="vm"
            type="com.usefulmemo.memo.ui.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainActivity"
        >

        <ImageView
            android:id="@+id/iv_test"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_launcher_background"
            tools:ignore="ContentDescription"
            android:onClick="@{()->vm.test()}"
            />

        <ImageView
            android:id="@+id/iv_test2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_test"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_launcher_background"
            tools:ignore="ContentDescription"
            android:onClick="@{()->vm.test2()}"
            />

        <ImageView
            android:id="@+id/iv_test3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_test2"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_launcher_background"
            tools:ignore="ContentDescription"
            android:onClick="@{()->vm.test3()}"
            />

        <ImageView
            android:id="@+id/iv_test4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_test3"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_launcher_background"
            tools:ignore="ContentDescription"
            android:onClick="@{()->vm.test()}"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
