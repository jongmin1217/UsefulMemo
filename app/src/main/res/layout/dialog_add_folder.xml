<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.usefulmemo.memo.ui.main.MainViewModel"/>

        <import type="android.view.View"/>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_add_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_dialog_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            tools:ignore="SpUsage,Autofill,LabelFor,TextFields,ContentDescription"
            >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/dp_18"
                android:textStyle="bold"
                android:textColor="?attr/basicTextColor"
                />

            <TextView
                android:id="@+id/tv_explanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/dp_16"
                android:textColor="?attr/basicTextColor"
                android:text="@string/plz_folder_name"
                />

            <EditText
                android:id="@+id/ed_folder_name"
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/tv_explanation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_edit_text_background"
                android:textColor="?attr/basicTextColor"
                android:textColorHint="?attr/lineColor"
                android:textSize="@dimen/dp_16"
                android:hint="@string/folder_name"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:maxLength="15"
                android:text="@={vm.folderName}"
                setFocus="@{vm.folderName}"
                >
                <requestFocus />
            </EditText>

            <ImageView
                android:id="@+id/iv_remove"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:layout_constraintTop_toTopOf="@id/ed_folder_name"
                app:layout_constraintBottom_toBottomOf="@id/ed_folder_name"
                app:layout_constraintEnd_toEndOf="@id/ed_folder_name"
                android:background="@drawable/remove"
                android:layout_marginEnd="10dp"
                android:visibility= "@{vm.folderName.empty ? View.INVISIBLE : View.VISIBLE}"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/ed_folder_name"
                android:layout_marginTop="20dp"
                android:background="@color/color_none"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_select"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_dialog_background"
            app:layout_constraintTop_toBottomOf="@id/layout_add_name"
            app:layout_constraintStart_toStartOf="@id/layout_add_name"
            app:layout_constraintEnd_toEndOf="@id/layout_add_name"
            android:layout_marginTop="5dp"
            tools:ignore="SpUsage"
            >

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_save"
                android:textSize="@dimen/dp_18"
                android:textColor="@color/orange"
                android:text="@string/cancel"
                android:gravity="center"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_save"
                android:layout_width="0dp"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_cancel"
                android:textSize="@dimen/dp_18"
                android:textColor="@{vm.folderName.empty ? @color/gray_2 : @color/orange}"
                android:text="@string/save"
                android:gravity="center"
                android:textStyle="bold"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/layout_select"
            android:layout_marginTop="20dp"
            android:background="@color/color_none"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
