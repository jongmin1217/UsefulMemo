<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="model"
            type="com.usefulmemo.memo.domain.model.Folder" />

        <variable
            name="vm"
            type="com.usefulmemo.memo.ui.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="SpUsage,ContentDescription"
        viewClick="@{()->vm.folderClick(model)}">

        <ImageView
            android:id="@+id/iv_folder"
            android:layout_width="25dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@{model.id == -2 ? @drawable/delete : @drawable/folder}"
            />

        <TextView
            android:id="@+id/tv_folder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="@dimen/dp_16"
            android:textColor="?attr/basicTextColor"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/iv_folder"
            android:layout_marginStart="20dp"
            android:text="@{model.name}"
            />

        <View
            android:id="@+id/line"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_folder_name"
            android:layout_marginTop="9.5dp"
            android:background="?attr/lineColor"
            app:layout_constraintStart_toStartOf="@id/tv_folder_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
