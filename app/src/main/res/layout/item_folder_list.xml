<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.usefulmemo.memo.domain.model.Folder" />

        <variable
            name="vm"
            type="com.usefulmemo.memo.ui.main.MainViewModel" />
    </data>

    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:dragEdge="right"
        app:mode="same_level">

        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="40dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/ib_edit_folder"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/green"
                    android:src="@drawable/icn_edit"
                    app:layout_constraintEnd_toStartOf="@id/ib_delete_folder"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/ib_delete_folder"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/icn_delete"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ib_edit_folder"
                    tools:ignore="ContentDescription" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                viewClick="@{()->vm.folderClick(model)}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="SpUsage,ContentDescription">

                <ImageView
                    android:id="@+id/iv_folder"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:background="@{model.id == -2 ? @drawable/delete : @drawable/folder}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_folder_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@{model.name}"
                    android:textColor="?attr/basicTextColor"
                    android:textSize="@dimen/dp_16"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@id/iv_folder"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <View
                    android:id="@+id/line"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:background="?attr/lineColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_folder_name"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>


    </com.chauthai.swipereveallayout.SwipeRevealLayout>


</layout>
